<section>
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= render 'devise/shared/links' %>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name,
                                 url: registration_path(resource_name),
                                 html: {class: 'form-horizontal'}) do |f| %>
                        <%= form_error_messages!(resource) %>
                        <div class="form-group">
                            <%= f.label :email, class: 'col-sm-4 control-label'%>
                            <div class="col-sm-8">
                                <%= f.email_field :email, autofocus: true,
                                                  id: 'email', class: 'form-control',
                                                  placeholder: 'Email'
                                %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :password, class: 'col-sm-4 control-label' do %>
                                Password
                                <% if @validatable %>
                                    <br/>
                                    (<%= @minimum_password_length %> characters minimum)
                                <% end %>
                            <% end %>
                            <div class="col-sm-8">
                                <%= f.password_field :password, autofocus: 'off',
                                                     id: 'password', class: 'form-control',
                                                     placeholder: 'Password'
                                %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :password_confirmation, 'Confirm Password', class: 'col-sm-4 control-label'%>
                            <div class="col-sm-8">
                                <%= f.password_field :password_confirmation, autofocus: 'off',
                                                     id: 'password_confirmation', class: 'form-control',
                                                     placeholder: 'New Password'
                                %>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8 text-right">
                                <%= f.submit 'Sign Up', class: 'btn btn-default' %>
                            </div>
                        </div>


                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
