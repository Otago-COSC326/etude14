<section>

    <div class="container">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add Contact</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for @contact, html: {class: 'form-horizontal', id: 'add-contact-form'} do |f| %>
                            <%= render partial:'/contacts/form', locals: {contact: @contact, f: f}%>
                        <% end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>